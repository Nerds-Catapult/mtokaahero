{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strictNullChecks": false,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "generated"
  ]
}